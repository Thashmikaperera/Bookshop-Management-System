<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainAnc" prefHeight="700.0" prefWidth="1054.0" stylesheets="@../assert/style/SupplierFormStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.bookshop.controllers.SupplierFormController">
   <children>
      <Label fx:id="lblMain" layoutX="301.0" layoutY="46.0" text="SUPPLIER MANAGE" textFill="#f8f8f8">
         <font>
            <Font name="System Bold Italic" size="45.0" />
         </font>
      </Label>
      <AnchorPane fx:id="ancTextBackground" layoutX="56.0" layoutY="132.0" prefHeight="516.0" prefWidth="402.0">
         <children>
            <JFXTextField fx:id="txtSupplierId" layoutX="54.0" layoutY="85.0" prefHeight="38.0" prefWidth="159.0" promptText="Supplier ID" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtSupplierName" layoutX="55.0" layoutY="166.0" onKeyReleased="#txtSupplierNameOnKeyReleased" prefHeight="38.0" prefWidth="285.0" promptText="Supplier Name" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtContact" layoutX="54.0" layoutY="246.0" onKeyReleased="#txtSupplierContactOnKeyReleased" prefHeight="38.0" prefWidth="285.0" promptText="Contact" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtEmail" layoutX="54.0" layoutY="332.0" onKeyReleased="#txtSupplierEmailOnKeyReleased" prefHeight="38.0" prefWidth="285.0" promptText="E-mail" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXButton fx:id="btnSearch" contentDisplay="GRAPHIC_ONLY" layoutX="223.0" layoutY="92.0" onAction="#btnSearchOnAction" prefHeight="25.0" prefWidth="40.0">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assert/img/SearchCustomer.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="btnClear" contentDisplay="GRAPHIC_ONLY" layoutX="284.0" layoutY="98.0" onAction="#btnClearOnAction" prefHeight="25.0" prefWidth="42.0">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assert/img/refreshid.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <Button fx:id="btnSave" layoutX="56.0" layoutY="418.0" mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" layoutX="146.0" layoutY="418.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnUpdate" layoutX="247.0" layoutY="417.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <TableView fx:id="tblSupplier" layoutX="531.0" layoutY="166.0" onMouseClicked="#tblSupplierClickAction" prefHeight="446.0" prefWidth="426.0">
         <columns>
            <TableColumn fx:id="colSupplierId" prefWidth="139.0" text="Supplier ID" />
            <TableColumn fx:id="colSupplierName" minWidth="3.0" prefWidth="130.0" text="Supplier Name" />
            <TableColumn fx:id="colSupplierContact" prefWidth="156.0" text="Contact" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
