<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainAnc" prefHeight="700.0" prefWidth="1054.0" stylesheets="@../assert/style/DriverFormStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.bookshop.controllers.DriverFormController">
   <children>
      <Label fx:id="lblMain" layoutX="334.0" layoutY="46.0" text="DRIVER MANAGE" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="45.0" />
         </font>
      </Label>
      <AnchorPane fx:id="ancTextBackground" layoutX="83.0" layoutY="134.0" prefHeight="502.0" prefWidth="434.0">
         <children>
            <JFXTextField fx:id="txtDriverId" layoutX="37.0" layoutY="51.0" prefHeight="38.0" prefWidth="175.0" promptText="Driver ID" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtDriverName" layoutX="38.0" layoutY="106.0" prefHeight="38.0" prefWidth="301.0" promptText="Driver Name" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtDriverAddress" layoutX="38.0" layoutY="167.0" prefHeight="38.0" prefWidth="301.0" promptText="Address" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtDriverContact" layoutX="40.0" layoutY="232.0" prefHeight="38.0" prefWidth="301.0" promptText="Contact" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtDriverEmail" layoutX="40.0" layoutY="292.0" prefHeight="38.0" prefWidth="301.0" promptText="E-mail" unFocusColor="BLACK">
               <font>
                  <Font size="17.0" />
               </font>
            </JFXTextField>
            <Button fx:id="btnSave" layoutX="44.0" layoutY="407.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="31.0" prefWidth="79.0" text="Save">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnUpdate" layoutX="284.0" layoutY="407.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="31.0" prefWidth="79.0" text="Update">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" layoutX="164.0" layoutY="407.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="31.0" prefWidth="79.0" text="Delete">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnSearch" contentDisplay="GRAPHIC_ONLY" layoutX="229.0" layoutY="58.0" mnemonicParsing="false" onAction="#btnSearchOnAction" prefHeight="25.0" prefWidth="40.0" text="Button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assert/img/SearchCustomer.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnClear" contentDisplay="GRAPHIC_ONLY" layoutX="290.0" layoutY="58.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="33.0" prefWidth="40.0" text="Button">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assert/img/refreshid.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <TableView fx:id="tblDrivers" layoutX="587.0" layoutY="144.0" onMouseClicked="#tblDriverClickAction" prefHeight="476.0" prefWidth="436.0">
        <columns>
          <TableColumn fx:id="colDriverId" prefWidth="89.0" text="Driver ID" />
          <TableColumn fx:id="colDriverName" prefWidth="101.0" text="Driver Name" />
            <TableColumn fx:id="colContact" prefWidth="105.0" text="Contact" />
            <TableColumn fx:id="colEmail" prefWidth="139.0" text="E-mail" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
